#include <iostream>
#include <string>

namespace std{
	enum{
		HELP = -2,
		EXIT,
		FRACTION_CALCULATOR
	};

	void DisplayMenu(){
		cout << "Please select which program you wish to run, to exit type --exit, to show this menu again type --help" << endl
				<< "1) Fraction Calculator"<<endl;
	}

	int CheckExit(string option){
		if(option == "-e" || option == "--exit"){
			return -1;
		}else if(option == "-h" || option == "--help"){
			DisplayMenu();
		}
		return -2;
	}

	int GetOption(){
		string option;
		cin >> option;
		int selected = -2;

		if(CheckExit(option)){
			selected = -1;
		}else{
			if(selected == -2){
				selected = stoi(option);
			}
		}
		return selected;
	}
}
