/**
 * This program gets a user for their quarterly water bills for the last four quarters,
 * and returns their average output, and whether they should be using less water
 * @author Jean-Luc Desroches
 * @date 2015/05/24
 */

#include <iostream>

using namespace std;
class WaterProgram{
private:
	float quarteylBill[4];
	void printWelcomeMessage(){
		cout << '\\' << string(25, '*') << '\\' << endl;
		cout << '\\' << string(5, '*') << " Welcome to the the Water bill program " << string(5,'*') << endl;
	}

	bool main (){
		int i = 0;

		printWelcomeMessage();
		for(float bill : quarteylBill){

			cin >> bill;
			quarteylBill[i] = bill;
			i++;
		}
		return false;
	}


public:
	WaterProgram(){
		while(!main());
	}
};


int main(){
	try{
		WaterProgram waterProgram = new WaterProgram();
		// exit program
		return 0;
	}catch(exception &e){
		cout << e.what();
		return -1;
	}

}
